# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           App.Resources.index

# Resources/Assets
GET     /resources                  App.Resources.find
GET     /resource/:id               App.Resources.intake(id: Long, stage: Int ?= 1)

# Help
GET     /help                       controllers.HelpPage.index(t: Int ?= controllers.Help.Default)

# Authentication
GET     /login                      controllers.Application.login
POST    /login                      controllers.Application.authenticate
GET     /logout                     controllers.Application.logout

# API
GET     /api/authenticatedPing      controllers.Api.authenticatedPing
GET     /api/authorizedPing         controllers.Api.authorizedPing
GET     /api/noauthPing             controllers.Api.noauthPing

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


