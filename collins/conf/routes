# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Resources.index
GET     /resources                  controllers.Resources.find
GET     /resource/:id               controllers.Resources.intake(id: Long, stage: Int ?= 1, CHASSIS_ID: String ?= "")
GET     /resources/help             controllers.Resources.help(t: controllers.Resources.Help)

# Authentication
GET     /login                      controllers.Application.login
POST    /login                      controllers.Application.authenticate
GET     /logout                     controllers.Application.logout

# API
GET     /api/authenticatedPing      controllers.Api.authenticatedPing
GET     /api/authorizedPing         controllers.Api.authorizedPing
GET     /api/noauthPing             controllers.Api.noauthPing

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


